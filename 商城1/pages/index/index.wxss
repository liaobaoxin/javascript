}
.hotGoods .item .right .retailPrice {
  color: #a48143;
}
.topics {
  background-color: #fff;
}
.topics .topic {
  white-space: nowrap;
  height: 510rpx;
  width: 700rpx;
}
.topics .topic .item {
  display: inline-block;
  font-size: 30rpx;
  margin-left: 20rpx;
}
.topics .topic .item image {
  width: 650rpx;
  height: 380rpx;
}
.topics .topic .item .down {
