  height: 130rpx;
}
.coupon {
  background-color: #fff;
}
.coupon .title {
  font-size: 35rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 130rpx;
}
.coupon .couponList {
  color: #fff;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.coupon .couponList .coupon {
  margin-top: 0rpx;
  margin-bottom: 20rpx;
  width: 95%;
  background: linear-gradient(to right, #cfa568, #e3bf79);
  display: flex;
  height: 200rpx;
  justify-content: center;
  align-items: center;
  position: relative;
}
.coupon .couponList .coupon .left {
  padding-left: 50rpx;
  flex: 3;
}
.coupon .couponList .coupon .left .discount {
  color: #b4282d;
  font-size: 50rpx;
  font-weight: 400;
}
.coupon .couponList .coupon .left .min {
  font-size: 30rpx;
  font-weight: 400;
}
.coupon .couponList .coupon .right {
  flex: 6;
  font-size: 30rpx;
  margin-top: 26rpx;
}
.coupon .couponList .coupon .right .name {
  font-size: 50rpx;
  margin-bottom: 5rpx;
}
.coupon .couponList .coupon .receive {
  height: 100%;
  flex: 2;
  -webkit-writing-mode: vertical-rl;
  writing-mode: vertical-rl;
  border-left: #f4f4f4 dashed 5rpx;
  justify-content: center;
  align-items: center;
  display: flex;
}
.coupon .couponList .coupon .receive view:first-child {
  margin-bottom: 30rpx;
}
.coupon .couponList .coupon .tag {
  background-color: #a48143;
  font-size: 23rpx;
  position: absolute;
  left: 10rpx;
  top: 10rpx;
  width: 90rpx;
  height: 38rpx;
  text-align: center;
  line-height: 40rpx;
}
.groupons {
  background-color: #fff;
}
.groupons .title {
  height: 130rpx;
  font-size: 40rpx;
  text-align: center;
  font-weight: 400;
  line-height: 130rpx;
}
.groupons .item {
  height: 250rpx;
  border-top: 1px solid #d9d9d9;
  display: flex;
  font-size: 30rpx;
}
.groupons .item .left {
  display: flex;
  flex: 1;
}
.groupons .item .left image {
  width: 220rpx;
}
.groupons .item .right {
  justify-content: center;
  display: flex;
  flex: 4;
  flex-direction: column;
}
.groupons .item .right .name {
  height: 70rpx;
}
.groupons .item .right .info {
  display: flex;
  flex-direction: row;
  align-self: flex-end;
  border: 1rpx solid #a48143;
  font-size: 25rpx;
  margin-right: 40rpx;
  border-radius: 2px 0 0 2px;
}
.groupons .item .right .info .grouponMember {
  padding: 0 2rpx;
  background-color: #a48143;
  color: #fff;
}
.groupons .item .right .info .grouponDiscount {
  padding: 0 2rpx;
  background-color: #fff;
  color: #a48143;
}
.groupons .item .right .brief {
  color: #999;
}
.groupons .item .right .price {
  display: flex;
  flex-direction: row;
}
.groupons .item .right .price .retailPrice {
  text-decoration: line-through;
  color: #999;
}
.groupons .item .right .price .grouponPrice {
  margin-left: 20rpx;
  color: #a48143;
}
.brand {
